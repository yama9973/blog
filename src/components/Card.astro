---
interface Props {
    url: string;
    image: string;
    title: string;
    body: string;
    pubDate: Date;
}

const { url, image, title, body,pubDate } = Astro.props;
import { Image } from 'astro:assets';
---
<li class="card">
    <a class="card__link" href={url}>
        <div class="center">
            <Image class="card__img" width="226" height="127" src={image} alt="BlogImage" loading="eager"/>
        </div>
        <h3 class="card__title">
            {title}
        </h3>
        <p class="card__txt">
            {body}
        </p>
        <p class="card__txt">
            {pubDate}
        </p>
    </a>
</li>

